@model IEnumerable<Kurs>

    <h3>Kurs Listesi</h3>
    <a href="/Kurs/Create" class="btn btn-primary">Kurs Ekle</a>
    <hr>
    
    <table class="table table-bordered">
        <thead>
            <tr>
                <th style="width: 150px;">@Html.DisplayNameFor(m => m.KursId)</th>
                <th>@Html.DisplayNameFor(m => m.Baslik)</th> 
                <th>@Html.DisplayNameFor(m => m.Ogretmen.AdSoyad)</th>                
                <th style="width: 150px;"></th>          
            </tr>
        </thead>  
        <tbody>
            @foreach(var kurs in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(m => kurs.KursId)</td>
                    <td>@Html.DisplayFor(m => kurs.Baslik)</td>   
                    <td>@Html.DisplayFor(m => kurs.Ogretmen.AdSoyad)</td>                  
                    <td>
                        <a  asp-action="Edit" asp-route-id = "@kurs.KursId" class="btn btn-sm btn-primary">Edit</a>
                        <a  asp-action="Delete" asp-route-id = "@kurs.KursId" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    
    </table>